    <script>
        var root = new Vue
            ({
                el: '#app',
                data:
                {
                    isVueActive: 'Al-SHAFQAT',
                    User:
                    {
                        UserID:0,
                        userName: '',
                        email: '',
                        password: '',
                        isVerified: false
                    },
                    rePassword: '',
                    UserForLogin:
                    {
                        userNameOremail: '',
                        password: '',
                    },

                },
                methods:
                {
                    isEmailValid(email) {
                        var reg = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;
                        if (reg.test(email)) {
                            return true;
                        }
                        else {
                            return false;
                        }
                    },
                    checkUserName(userNames) {
                        var char = userNames.which;
                        if (char > 31 && char != 32 && (char < 65 || char > 90) && (char < 97 || char > 122)) {
                            return false;
                        }

                    },
                    login() {
                        
                        var vm = this;
                        if (this.UserForLogin.password == "" || this.UserForLogin.password.length <= 5) {  toastr.error("Password Required Or Minimum Length 6", "Error!"); }
                        if (this.UserForLogin.userNameOremail == "") { toastr.error("Email or User Name Required", "Error!"); }
                        if (this.UserForLogin.userNameOremail != "" && this.UserForLogin.password != "" && !(this.UserForLogin.password.length <= 5)) {
                            
                            axios.post('/Authentication/login',
                                {
                                    userNameOremail: vm.UserForLogin.userNameOremail,
                                    password: vm.UserForLogin.password,
                                })
                                .then(function (res) {

                                    if (res.data["code"] == 200 && res.data["Message"] == "successfully logged in") {
                                        toastr.success("Succefully Logged in", "Success!");
                                        window.location = "/Home";
                                    }
                                    if (res.data["code"] == 400 && res.data["Message"] == "Incorrect Email or Password") {
                                        toastr.error("Incorrect UserName/Email or Password", "Error!");
                                    }
                                    if (res.data["code"] == 400 && res.data["Message"] == "No User Exist") { toastr.error("No User Exist", "Error!"); }
                                    
                                })
                                .then(function (error) {
                                    console.log(error);
                                })
                        }
                    },
                    registeration() {
                        if (this.User.password !== this.rePassword) { toastr.error("Passwords are different", "Error!"); }
                        if (this.User.password.length <= 5) { toastr.error("Password Required Or Minimum Length(6)", "Error!"); } 
                        //if (this.User.email == "") { toastr.error("Email Required", "Error!") }
                        if (this.isEmailValid(this.User.email) == false) { toastr.error("Invalid Required", "Error!"); }
                        if (this.User.userName == "") { toastr.error("User Name Required", "Error!") }
                        
                        
                        if (this.User.userName != "" && this.isEmailValid(this.User.email) == true && !(this.User.password.length <= 5) && !(this.User.password != this.rePassword)) {
                            var vm = this;
                            axios.post('/Authentication/registeration',
                                {
                                    currentUser: this.User,
                                })
                                .then(function (res) {
                                    if (res.data["code"] == 200 && res.data["Message"] == "User registered") {
                                        toastr.success("Please Wait", "Success!");
                                        toastr.success("Successfully Registered", "Success!");
                                        window.location = "/Home";

                                    }
                                    if (res.data["code"] == 101 && res.data["Message"] == "Email or User Name Already Exist") {

                                        toastr.error("Email or User Name Already Exist", "Error!");
                                    }
                                    if (res.data["code"] == 500 && res.data["Message"] == "Unauthorized Changes") {

                                        toastr.error("Unauthorized Changes");
                                    }
                                   
                                })
                                .then(function (error) {
                                    console.log(error);
                                })
                        }

                    },
                   

                },
            });
    </script>


